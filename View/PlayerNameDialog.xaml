<Window x:Class="OthelloWPF.PlayerNameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Player Setup" Height="720" Width="720"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="500" MinWidth="500">

    <Grid Background="AntiqueWhite">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        


        <Border Grid.Row="0" Background="AntiqueWhite" Padding="30">
            <StackPanel>
                <TextBlock Text="OTHELLO SETUP" 
                         HorizontalAlignment="Center" 
                         FontSize="32" FontWeight="Bold" 
                         Foreground="Black"/>
                <TextBlock Text="Enter player names to start the game" 
                         HorizontalAlignment="Center" 
                         FontSize="18" 
                         Foreground="Black" 
                         Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="1" Margin="60,40" VerticalAlignment="Center">

            <Border Background="blue" Padding="30" Margin="0,0,0,30">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                        <Ellipse Fill="Black" Width="40" Height="40" Margin="0,0,15,0"/>
                        <TextBlock Text="Player 1 (Black)" 
                                 FontSize="22" FontWeight="Bold" 
                                 Foreground="White" 
                                 VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBox x:Name="Player1TextBox" 
                           Text="Player 1"
                           FontSize="18" 
                           Padding="15,12"
                           Background="White"
                           BorderThickness="2"
                           BorderBrush="Black" 
                           Height="56" 
                           HorizontalAlignment="Stretch"/>
                </StackPanel>
            </Border>


            <Border Background="DarkOrange" Padding="30">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                        <Ellipse Fill="White" Stroke="Black" StrokeThickness="2" 
                               Width="40" Height="40" Margin="0,0,15,0"/>
                        <TextBlock Text="Player 2 (White)" 
                                 FontSize="22" FontWeight="Bold" 
                                 Foreground="White" 
                                 VerticalAlignment="Center"/>
                    </StackPanel>

                    <TextBox x:Name="Player2TextBox" 
                           Text="Player 2"
                           FontSize="18" 
                           Padding="15,12" 
                           Background="White"
                           BorderThickness="2"
                           BorderBrush="black"
                           Height="56"
                           HorizontalAlignment="Stretch"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <Border Grid.Row="2" Background="AntiqueWhite" Padding="30">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="StartGameButton" 
                        Content="Start Game" 
                        Click="StartGameButton_Click"
                        Background="#27AE60" 
                        Foreground="White" 
                        Padding="25,15" 
                        Margin="15,0" 
                        FontSize="18" 
                        FontWeight="Bold"
                        BorderThickness="0" 
                        MinWidth="150"/>

                <Button x:Name="CancelButton" 
                        Content="Cancel" 
                        Click="CancelButton_Click"
                        Background="#E74C3C" 
                        Foreground="White" 
                        Padding="25,15" 
                        Margin="15,0" 
                        FontSize="18" 
                        FontWeight="Bold"
                        BorderThickness="0" 
                        MinWidth="150"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>