<Window x:Class="OthelloWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Othello Game" Height="700" Width="800"
        WindowState="Maximized"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="BoardCellStyle" TargetType="Button">
			<Setter Property="Width" Value="60"/>
			<Setter Property="Height" Value="60"/>
			<Setter Property="Margin" Value="1"/>
			<Setter Property="Background" Value="#228B22"/>
			<Setter Property="BorderBrush" Value="#006400"/>
			<Setter Property="BorderThickness" Value="2"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
							<ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter Property="Background" Value="#32CD32"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

		<Style x:Key="GamePieceStyle" TargetType="Ellipse">
			<Setter Property="Width" Value="45"/>
			<Setter Property="Height" Value="45"/>
			<Setter Property="Stroke" Value="#333"/>
			<Setter Property="StrokeThickness" Value="2"/>
		</Style>
	</Window.Resources>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>


		<Border Grid.Row="0" Background="DarkBlue" Padding="20">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="2*"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>

				<StackPanel Grid.Column="0" HorizontalAlignment="Left">
					<TextBlock x:Name="Player1Name" Text="Player 1"
                             Foreground="White" FontSize="16" FontWeight="Bold"/>
					<StackPanel Orientation="Horizontal">
						<Ellipse Fill="Black" Width="20" Height="20" Margin="0,5,5,0"/>
						<TextBlock x:Name="Player1Score" Text="Score: 2"
                                 Foreground="White" FontSize="14" VerticalAlignment="Center"/>
					</StackPanel>
				</StackPanel>


				<TextBlock Grid.Column="1" Text=" OTHELLO "
                         HorizontalAlignment="Center" VerticalAlignment="Center"
                         Foreground="White" FontSize="24" FontWeight="Bold"/>

				<StackPanel Grid.Column="2" HorizontalAlignment="Right">
					<TextBlock x:Name="Player2Name" Text="Player 2"
                             Foreground="White" FontSize="16" FontWeight="Bold"/>
					<StackPanel Orientation="Horizontal">
						<Ellipse Fill="White" Stroke="Black" StrokeThickness="1"
                               Width="20" Height="20" Margin="0,5,5,0"/>
						<TextBlock x:Name="Player2Score" Text="Score: 2"
                                 Foreground="White" FontSize="14" VerticalAlignment="Center"/>
					</StackPanel>
				</StackPanel>
			</Grid>
		</Border>

		<Grid Grid.Row="1" Background="AntiqueWhite">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>

			<Border Grid.Row="0" Background="DarkViolet" Margin="0,0,0,30"
                    Padding="15">
				<StackPanel>
					<TextBlock x:Name="CurrentPlayerText" Text="Player 1's Turn"
                             HorizontalAlignment="Center" FontSize="18"
                             FontWeight="Bold" Foreground="White"/>
					<TextBlock x:Name="CurrentMessage" Text="Click 'New Game' to start!"
                             HorizontalAlignment="Center" FontSize="14"
                             Foreground="White" Margin="0,5,0,0"/>
				</StackPanel>
			</Border>

            <Grid x:Name="GameBoardGrid" Grid.Row="1"
                  Width="520" Height="520"
                  HorizontalAlignment="Center" VerticalAlignment="Center"
                  Background="AntiqueWhite">
            </Grid>
		</Grid>

		<Border Grid.Row="2" Background="AntiqueWhite" Padding="20">
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
				<Button x:Name="NewGameButton" Content="New Game"
                        Click="NewGameButton_Click"
                        Background="#27AE60" Foreground="White"
                        Padding="15,8" Margin="5" FontSize="14" FontWeight="Bold"
                        BorderThickness="0"/>

				<Button x:Name="RestartButton" Content="Restart"
                        Click="RestartButton_Click"
                        Background="#F39C12" Foreground="White"
                        Padding="15,8" Margin="5" FontSize="14" FontWeight="Bold"
                        BorderThickness="0"/>

				<Button x:Name="ShowRulesButton" Content="Rules"
                        Click="ShowRulesButton_Click"
                        Background="#3498DB" Foreground="White"
                        Padding="15,8" Margin="5" FontSize="14" FontWeight="Bold"
                        BorderThickness="0"/>

				<Button x:Name="ExitButton" Content="Exit"
                        Click="ExitButton_Click"
                        Background="#E74C3C" Foreground="White"
                        Padding="15,8" Margin="5" FontSize="14" FontWeight="Bold"
                        BorderThickness="0"/>
			</StackPanel>
		</Border>
	</Grid>
</Window> 